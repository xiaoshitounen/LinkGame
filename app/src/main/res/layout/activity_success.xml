<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessActivity"

    android:orientation="vertical"
    android:background="@drawable/bg_success_failure">

    <!--banner部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/animals"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            />

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />

        <swu.xl.linkgame.XLTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Success"
            android:layout_centerHorizontal="true"
            style="@style/ShowMessage_Success_Text"
            android:layout_alignTop="@id/iv_banner"
            android:layout_marginTop="36dp"
            />

    </RelativeLayout>

    <!--闯关信息部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        >

        <!--星星-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/star_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star"
                android:layout_alignEnd="@id/star_middle"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/star_middle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/star_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star"
                android:layout_alignStart="@id/star_middle"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <!--关卡信息-->
        <swu.xl.linkgame.XLTextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第17关"
            style="@style/LevelMessage_Text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <!--分数信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="-10dp"
            >
            <swu.xl.linkgame.XLTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Score"
                style="@style/StateTitleMessage_Text"
                />

            <swu.xl.linkgame.XLTextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3024"
                style="@style/StateContentMessage_Text"
                />
        </LinearLayout>

        <!--时间信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="-5dp"
            >
            <swu.xl.linkgame.XLTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Time"
                style="@style/StateTitleMessage_Text"
                />

            <swu.xl.linkgame.XLTextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.9秒"
                style="@style/StateContentMessage_Text"
                />
        </LinearLayout>

        <!--连机信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="-15dp"
            >
            <swu.xl.linkgame.XLTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Batter"
                style="@style/StateTitleMessage_Text"
                />

            <swu.xl.linkgame.XLTextView
                android:id="@+id/batter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20次"
                style="@style/StateContentMessage_Text"
                />
        </LinearLayout>

    </LinearLayout>

    <!--按钮操作部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >

        <!--回到关卡选择界面-->
        <ImageButton
            android:id="@+id/btn_menu"
            style="@style/operation_btn"
            android:background="@drawable/btn_shape_menu"
            android:src="@drawable/menu"

            android:layout_marginEnd="50dp"
            />

        <!--重新开启本局-->
        <ImageButton
            android:id="@+id/btn_refresh"
            style="@style/operation_btn"
            android:background="@drawable/btn_shape_refresh"
            android:src="@drawable/refresh"
            />

        <!--开启下一关-->
        <ImageButton
            android:id="@+id/btn_next"
            style="@style/operation_btn"
            android:background="@drawable/btn_shape_next"
            android:src="@drawable/next"

            android:layout_marginStart="50dp"
            />

    </LinearLayout>


</LinearLayout>